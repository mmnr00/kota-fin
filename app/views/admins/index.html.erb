

<% if @admin_taska.count > 0 %>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-globe-asia"></i>
      MY COMMUNITIES &nbsp&nbsp <b><%= link_to "CREATE NEW COMMUNITY", taskanew_path, class: "btn btn-sm btn-warning"%></b>
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th> COMMUNITY NAME </th>
            <th> ADDRESS </th>
            <th> NO OF MEMBERS </th>
            <th> ACTIONS </th>
          </tr>
        </thead>
        <tbody>
          <% @admin_taska.order('name ASC').each do |kuli|%>
            <tr>
              <td><%= kuli.name.upcase %>
              </td>
              <td><%= kuli.address_1 %>&nbsp
                <%= kuli.address_2 %>&nbsp
                <%= kuli.city %>&nbsp
                <%= kuli.postcode %>&nbsp<%= kuli.states %><br>  
              </td>
              <td><%= kuli.classrooms.count %></td>
              <td><%= link_to "VIEW DASHBOARD", taskashow_path(kuli) , class: "badge badge-info"%></td>
              
            </tr>
          <% end %> 
        </tbody>
      </table>
    </div>
  </div>
</div>

<% else %>

  <p> No centres created. Please create one to proceed <p>

<% end %>

