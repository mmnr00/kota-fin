<div class="row">
  <div class="col-lg-6">
    <%= render 'payments/bill' %>
  </div>

  <div class="col-lg-3">
    <div class="col-lg-12" style="background-color:#cce5cc">
    <%= form_for(:bill, :url => {:controller=>'payments', :action=>'upd_pmt'}, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
      <br>

      <div class="form-group"> <!-- PAYMENT DATE-->
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>PAYMENT DATE</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-12">
            <%= f.date_field :pdt, class: "form-control", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <div class="form-group"> <!-- PAYMENT METHOD-->
        <div class="row">
          <div class="control-label col-sm-12">
            <strong>PAYMENT METHOD</strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.select :mtd, ["CDM", "CASH", "ONLINE BANKING","OTHERS"] ,{include_blank: "SELECT"}, {required: true} %>
          </div>
        </div>
      </div>

      


      <!-- FORM ENTRY CREATION -->
      <%= f.hidden_field :pmt, value: params[:pmt] %>
      <%= f.hidden_field :tsk, value: params[:tsk] %>
      <%= f.hidden_field :adm, value: current_admin.id %>
      <%= f.submit :"UPDATE BILL", class: 'btn btn-primary btn-sm btn-block'%><br>
    <% end %>
  </div>
  </div>

  
  
</div>