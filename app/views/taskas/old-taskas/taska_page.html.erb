<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
  <!-------    font awesome online plug --------------->
  
</head>
<!-------------end head scripts and link src ------------->
  
<!------------start content ------------>
<body>
  <div class="wrapper">   
    <div class="container-fluid" id="body-container-fluid">
      <div class="container">
        <!---- for body container ---->
        <div class="row">
           <!-------mother container middle class------------------->
          <div class="col-lg-12">
          <div class="card" style="width:100%">
            <% image = @fotos.where(foto_name: "CENTER PRIMARY PHOTO").first %>
              <% if image.picture.present? %>
                <%= image_tag(image.picture.url, width: "100%") %>
              <% end %>
            <div class="card-body">
              <h1 class="card-title">
                <% image = @fotos.where(foto_name: "CENTER LOGO").first %>
                  <% if image.present? && image.picture.present? %>
                    <%= image_tag(image.picture.url, size: "50x50") %>
                  <% end %>
                <%= @taska.name.upcase %></h1>
                <ul class="list-inline" id="courses">
                <li class="list-inline-item">
                  <%= link_to "#", class: "btn btn-sm btn-primary active" do %>
                    <i class="fa fa-user fa-lg"></i> <%= @taska.supervisor.upcase %>
                  <% end %>
                </li> 
              </ul>
              <div class="address">               
              <ul class="w3-ul w3-lg">
                <li> <i class="fa fa-home" aria-hidden="true"></i>  <%= @taska.address_1.upcase %></li>
                <li><i class="fa fa-road" aria-hidden="true"></i> <%= @taska.address_2.upcase %></li>
                <li><i class="fa fa-building" aria-hidden="true"></i> <%= @taska.city.upcase %></li>
                <li><i class="fa fa-globe" aria-hidden="true"></i> <%= @taska.states.upcase %>,<%= @taska.postcode %> </li>
                <li><i class="fa fa-bookmark" aria-hidden="true"></i> BOOKING FEE: RM <%= @taska.booking %></li>
                <li><i class="fa fa-envelope" aria-hidden="true"></i> <%= @taska.email %> </li>
                <% hbook = @taska.fotos.where(foto_name: "CENTER HANDBOOK").first %>
                <% if hbook.picture.present? %>
                  <li>
                    <a href="<%= hbook.picture.url %>" target="_blank">
                      <font color="blue"><%= @taska.name.upcase %> HANDBOOK</font>
                    </a>
                  </li>
                <% end %>
              </ul>
              </address>
              <hr>
             <p><button class="w3-button w3-block w3-green"   data-toggle="tooltip" data-placement="top" title="Please contact us for further enquires"> <i class="fa fa-phone-square fa-lg"></i> <i class="fa fa-whatsapp fa-lg"></i> 
             <%= @taska.phone_1 %>-<%= @taska.phone_2 %> </button></p>
             <hr>
             <% if 1==1 #@taska.kids.count < $package_child["#{@taska.plan}"].to_i %>
              <% if current_admin %>
                <% reg_link = "register_child_admin?taska_id=#{@taska.id}" %>
              <% else %>
                <% reg_link = "check_kid?reg=1&taska_id=#{@taska.id}" %>
              <% end %>
               <a href="/<%= "#{reg_link}" %>">
                 <p><button class="w3-button w3-block w3-blue"   data-toggle="tooltip" data-placement="top" title="Click here to register"> <i class="fa fa-user-plus fa-lg"></i>&nbsp&nbsp  
                 REGISTER YOUR CHILD</button></p>
               </a>
             <% end %>
            </div>
            <hr>
            <p class="lower-case">  RATINGS</p>
            <div class="ratings">
              <ul class="list-inline">
                  <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                  <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                  <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                  <li class="list-inline-item selected"><i class="fa fa-star"></i></li>
                  <li class="list-inline-item selected"><i class="fa fa-star"></i></li>

              </ul>
            </div>
            <hr>
              <p class="lower-case ">  OUR LOCATION</p>
            <iframe
              width="100%"
              height="450"
              frameborder="0" style="border:0"
              src="https://www.google.com/maps/embed/v1/place?key=AIzaSyD6jH8VcIgoedkf5turhwFRQ4VNWi-B3qE
                &q=<%= "#{@taska.address_1},#{@taska.address_2},#{@taska.city},#{@taska.postcode},#{@taska.states}" %>" allowfullscreen>
            </iframe>
            
            <hr>
            
            <br>
            

          </div>

          </div>
          
          
          
          
         
          
       
          
          
          
          
          
        </div>
      </div>
    </div>
      
          

    
  </div>
</body>
  
  
 