<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-search"></i>
      ALL RECEIPTS FOR <%= @taska.name.upcase %></strong>
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th>PERIOD</th>
            <th>AMOUNT(RM)</th>
            <th>RECEIPTS</th>
          </tr>
        </thead>
        <tbody>
          <% @taska_receipts.order('bill_year DESC').order('bill_month DESC').each do |bill| %>
            <tr>
              <td><%= "#{$month_name[bill.bill_month]}" %>-<%= bill.bill_year %></td>
              <!-- <td><%= "#{bill.updated_at.strftime('%d-%^b-%y')} to #{(bill.updated_at + 30.days).strftime('%d-%^b-%y')}"%></td> -->
              <td><%= bill.amount %></td>
              <td>
                <%= link_to view_invoice_taska_path(taska: @taska, payment: bill), class: "btn btn-sm btn-success active", target:"_blank" do %>
                      <i class="fa fa-download"></i> RECEIPT
                    <% end %>  
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>