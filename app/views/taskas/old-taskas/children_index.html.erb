<h1> Children List for <strong><%= @taska.name %></strong>!  </h1>

<div class="results-block col-md-12">
	<caption><h3>MY CHILDREN</h3></caption>
  <%= link_to "Enrol New Children", classroom_index_path, class: "btn btn-xs btn-success active"%></br></br>
  <table class="table table-striped table-bordered">
    <thead>   	
      <tr>
        <th>NAME</th>
        <th>PARENTS</th>
        <th>CLASS</th>
        <th>ACTION</th>

      </tr>
    </thead>

    <tbody><!-- from /view/classroom/show -->
    	<% @taska_classrooms.each do |classroom| %>
        <% classroom.kids.each do |child| %>
        <tr>
          <td><%= child.name %></td>
          <td><%= child.parent.username %></td>
          <td><%= child.classroom.classroom_name %></td>
          <td><%= link_to "Edit Details", root_path, class: "btn btn-xs btn-primary active"%> | <%= link_to "Remove Children", root_path, class: "btn btn-xs btn-danger active"%></td>
        </tr>
        <% end %>
      <% end %>
        
    </tbody>
  </table>
</div>

