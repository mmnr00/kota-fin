<div class="card shadow mb-4">
  <div class="card-header">
    <div class="row">
      <%= form_tag tsk_fee_path, method: :get, id: "find_kid" do %>
        <%= text_field_tag :sch_yr, params[:sch_yr], placeholder: "Search Year" %>
        <%= text_field_tag :sch_str, params[:sch_str], placeholder: "Search Item" %>
        <%= select_tag :sch_fld, options_for_select(["Month","Year", "Unit No", "Block/Road","IC No","Bill_ID"], params[:sch_fld]),
              include_blank: "Select Field", required: true %>
        <%= hidden_field_tag :id, params[:id], value: params[:id] %>
        <%= hidden_field_tag :sch, params[:sch], value: true %>
        <%= button_tag(type: :submit, class: "btn btn-sm btn-success", id: "submit_expense") do %>
            <i class="fa fa-search"></i> SEARCH
        <% end %>
        <%= link_to tsk_fee_path(@taska), class:"btn btn-sm btn-danger" do %>
            <i class="fa fa-sync"></i> CLEAR
        <% end %>
      <% end %>
    </div>
  </div>
