
<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-search"></i>
      ALL TASKA (TOTAL : <%= @taska_check.count %>, PENDING: <%= @taska_super.count %> )</strong>
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th>BILLPLZ</th>
            <th>VERIFIED</th>
            <th>COLLCT</th>
            <th>STATUS</th> 
            <th>NAME</th>  
            <th>SUBDOMAIN</th>  
            <th>ID</th>                      
            <th>BANK NAME</th>
            <th>ACC NO</th>
            <th>ACC NAME</th>
            <th>SSM NO</th>
            <th>PLAN</th>
            <th>EMAIL</th>
          </tr>
        </thead>
        <tbody>
          <% @taska_super.each do |taska| %>
            <% if !taska.collection_id.present? %>
            <tr>
              <td>
                <% if taska.billplz_reg == "NO" %>
                  <%= link_to "NO", "#", class:"btn btn-sm btn-danger active" %>
                  <br><br>
                  <%= link_to "DONE", billplz_reg_path(id: taska.id), class:"btn btn-sm btn-primary active" %>
                <% else %>
                  <%= link_to "#{taska.billplz_reg}", "#", class:"btn btn-sm btn-success active" %>
                <% end %>
              </td>
              <td>
                <% if taska.bank_status == "verified" %>
                  <%= link_to "#{taska.bank_status}", "#", class:"btn btn-sm btn-success active" %>
                <% elsif taska.bank_status == "unverified" %>
                  <%= link_to "#{taska.bank_status}", "#", class:"btn btn-sm btn-warning active" %>
                <% else %>
                  <%= link_to "#{taska.bank_status}", "#", class:"btn btn-sm btn-danger active" %>
                <% end %>
              </td>
              <td>
                <% if taska.bank_status == "verified" %>
                  <%= link_to "CREATE", create_collection_path(id: taska.id), class:"btn btn-sm btn-success active" %>
                <% else %>
                  NA
                <% end %>
              </td>
              <td>
                <% if !taska.payments.where(name: "TASKA PLAN").where(paid: false).present? %>
                  <i class="fa fa-check-circle"></i>
                <% else %>
                  <i class="fa fa-times-circle"></i>
                <% end %>
              </td>
              <td><%= taska.name %></td>
              <td><%= taska.subdomain %></td>
              <td><%= taska.id %></td>
              <td><%= taska.bank_name %></td>
              <td><%= taska.acc_no %></td>
              <td><%= taska.acc_name %></td>
              <td><%= taska.ssm_no %></td>
              <td><%= taska.plan %></td>
              <td><%= taska.email %></td>
            </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>