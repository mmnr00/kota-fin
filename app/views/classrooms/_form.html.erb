<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@classroom, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

        <!-- classroom name -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>Block/Road</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :classroom_name, style: 'text-transform: uppercase', class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <!-- BASE FEE-->    
        <!-- <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>Unit No</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.number_field :base_fee, class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div> -->

        <!-- classroom description -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>Unit No</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :description, style: 'text-transform: uppercase', class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        

        <%= f.hidden_field :taska_id, value: @taska.id %>
              
        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-10 col-4">
              <%= f.submit :"Create Resident", class: 'btn btn-primary btn-md' %>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>